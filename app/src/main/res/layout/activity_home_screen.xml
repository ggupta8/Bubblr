<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.garima.bubblr.HomeScreen"
    android:background="#d7ddeb">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            android:id="@+id/btnCalendarsHome"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/calendars"
            android:background="#d7ddeb" />

        <View
            android:layout_width="275dp"
            android:layout_height="1dp"
            android:background="#98a1ad"
            android:backgroundTint="#98a1ad"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            android:id="@+id/btnHomeBubbles"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bubbles"
            android:background="#d7ddeb" />

        <View
            android:layout_width="275dp"
            android:layout_height="1dp"
            android:background="#98a1ad"
            android:backgroundTint="#98a1ad"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            android:id="@+id/btnHomeAlarms"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/alarms"
            android:background="#d7ddeb" />

    </LinearLayout>
</RelativeLayout>
